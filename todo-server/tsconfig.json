{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "esModuleInterop": true,
    "checkJs": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "emitDeclarationOnly": true,
    "declaration": true
  }
}
